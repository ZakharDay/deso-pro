{
  "manifest_version": 3,
  "name": "DeSo Pro",
  "description": "Use Openfund, Focus and DeSo like a pro",
  "version": "0.3.4",
  "content_scripts": [
    {
      "matches": ["https://openfund.com/*", "https://focus.xyz/*"],
      "js": ["extension.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/extension_icon_16.png",
      "32": "/images/extension_icon_32.png",
      "48": "/images/extension_icon_48.png",
      "128": "/images/extension_icon_128.png"
    }
  },
  "icons": {
    "16": "/images/extension_icon_16.png",
    "32": "/images/extension_icon_32.png",
    "48": "/images/extension_icon_48.png",
    "128": "/images/extension_icon_128.png"
  }
}
